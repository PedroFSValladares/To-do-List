<div class="row row-cols-1 row-cols-md-3 g-4">
    @{
        foreach(var tarefa in Model) {
            string cor = tarefa.Status == TarefaStatus.Finalizada ? "green" : "red";
            <div class="col">
                <div class="card w-75">
                    <div class="card-body">
                        <h4 class="card-title">@tarefa.Titulo</h4>
                        <p class="card-text mb-0">@tarefa.Descricao</p>
                        <p class="card-text mb-0">Data: @tarefa.Data.ToShortDateString()</p>
                        <p class="card-text" style="color: @cor">@tarefa.Status</p>
                        <a asp-action="Detalhes" asp-route-id="@tarefa.Id" class="btn btn-info">Detalhes</a>
                        <a asp-action="Editar" asp-route-id="@tarefa.Id" class="btn btn-primary">Editar</a>
                        <a asp-action="Deletar" asp-route-id="@tarefa.Id" class="btn btn-danger">Deletar</a>
                    </div>
                </div>
            </div>
        }
    }
</div>


<div class="mt-3">
    <a asp-action="Criar" class="btn btn-primary">Nova Tarefa</a>
    <a asp-action="Pesquisar" class="btn btn-secondary">Pesquisar</a>
</div>
